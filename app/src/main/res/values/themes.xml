<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Umain" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Theme.Umain" parent="Base.Theme.Umain" />


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48%</item>
    </style>

    <style name="restaurantItem" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>


    <!--Text Styles-->
    <style name="Title1">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <style name="Title2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">700</item>
        <item name="android:textColor">@color/subtitleColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <style name="Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <style name="Headline2">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <style name="Footer1">
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight" tools:targetApi="p">12.1sp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textColor">@color/footerColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/inter</item>
    </style>


</resources>